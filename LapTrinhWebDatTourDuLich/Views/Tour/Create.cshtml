@model LapTrinhWebDatTourDuLich.Models.Table_Tour
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm tour mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tour</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="MaVanChuyen">Mã vận chuyển: </label>
            @*@Html.LabelFor(model => model.MaVanChuyen, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @*  @Html.EditorFor(model => model.MaVanChuyen, new { htmlAttributes = new { @class = "form-control" } }) *@
            @Html.ValidationMessageFor(model => model.MaVanChuyen, "", new { @class = "text-danger" })
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập mã vận chuyển!" min="1" id="MaVanChuyen" name="MaVanChuyen" type="number" value="" aria-describedby="MaVanChuyen-error" aria-invalid="true"> @ViewData["NhapMaVanChuyen"]
         
        </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="TenTour">Tên tour: </label>
            @*@Html.LabelFor(model => model.TenTour, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
          @*  @Html.EditorFor(model => model.TenTour, new { htmlAttributes = new { @class = "form-control" } }) *@
            @Html.ValidationMessageFor(model => model.TenTour, "", new { @class = "text-danger" })
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập tên tour!" id="TenTour" name="TenTour" type="text" value="" aria-describedby="TenTour-error" aria-invalid="true"> @ViewData["NhapTenTour"]
        </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NoiKhoiHanh">Nơi khởi hành: </label>
            @*@Html.LabelFor(model => model.NoiKhoiHanh, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
          @*  @Html.EditorFor(model => model.NoiKhoiHanh, new { htmlAttributes = new { @class = "form-control" } }) *@
            @Html.ValidationMessageFor(model => model.NoiKhoiHanh, "", new { @class = "text-danger" })
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập nơi khởi hành!" id="NoiKhoiHanh" name="NoiKhoiHanh" type="text" value="" aria-describedby="NoiKhoiHanh-error" aria-invalid="true"> @ViewData["NhapNoiKhoiHanh"]
        </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NgayKhoiHanh">Ngày khởi hành: </label>
            @*@Html.LabelFor(model => model.NgayKhoiHanh, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
           @* @Html.EditorFor(model => model.NgayKhoiHanh, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.NgayKhoiHanh, "", new { @class = "text-danger" })
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập ngày khởi hành!" id="NgayKhoiHanh" name="NgayKhoiHanh" type="date" value="" aria-describedby="NgaySinh-error" aria-invalid="true"> @ViewData["NhapNgayKhoiHanh"]
        </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="ThoiGian">Thời gian: </label>
            @*@Html.LabelFor(model => model.ThoiGian, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @*      @Html.EditorFor(model => model.ThoiGian, new { htmlAttributes = new { @class = "form-control" } }) *@
            @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập thời gian!" id="ThoiGian" name="ThoiGian" type="text" value="" aria-describedby="ThoiGian-error" aria-invalid="true"> @ViewData["NhapThoiGian"]
        </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="GiaTour">Giá tour: </label>
            @*@Html.LabelFor(model => model.GiaTour, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @*  @Html.EditorFor(model => model.GiaTour, new { htmlAttributes = new { @class = "form-control" } }) *@
            @Html.ValidationMessageFor(model => model.GiaTour, "", new { @class = "text-danger" })
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập giá tour!" min="0" id="GiaTour" name="GiaTour" type="number" value="" aria-describedby="GiaTour-error" aria-invalid="true"> @ViewData["NhapGiaTour"]
        </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="TourNayCoGiHay">Tour này có gì hay: </label>
            @*@Html.LabelFor(model => model.TourNayCoGiHay, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @*    @Html.EditorFor(model => model.TourNayCoGiHay, new { htmlAttributes = new { @class = "form-control" } }) *@
            @Html.ValidationMessageFor(model => model.TourNayCoGiHay, "", new { @class = "text-danger" })
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập tour này có gì hay!" id="TourNayCoGiHay" name="TourNayCoGiHay" type="text" value="" aria-describedby="TourNayCoGiHay-error" aria-invalid="true"> @ViewData["NhapTourNayCoGiHay"]
        </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <strong>Hình</strong>
                @*  @Html.EditorFor(model => model.Hinh, new { htmlAttributes = new { @class = "form-control" } }) *@
                @Html.ValidationMessageFor(model => model.Hinh, "", new { @class = "text-danger" })
                <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập hình!" id="Hinh" name="Hinh" type="text" value="" aria-describedby="Hinh-error" aria-invalid="true"> @ViewData["NhapHinh"]
               
                <input type="file" name="fileUpload" id="fileUpload" accept="image/*" style="display:none;" />
                <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />
                <img id="pictureUpload" />
            </div>
        </div>
        @section upload
        {
            <script>
                $(function () {
                    $('#btnUpload').click(function () {
                        $('#fileUpload').trigger('click');
                    });
                });
                $('#fileUpload').change(function () {
                    if (window.FormData !== undefined) {
                        var fileUpload = $('#fileUpload').get(0);
                        var files = fileUpload.files;
                        var formData = new FormData();
                        formData.append('file', files[0]);
                        $.ajax(
                            {
                                type: 'POST',
                                url: '/Tour/ProcessUpload',
                                contentType: false,
                                processData: false,
                                data: formData,
                                success: function (urlImage) {
                                    $('#pictureUpload').attr('src', urlImage);
                                    $('#Hinh').val(urlImage);
                                },
                                error: function (err) {
                                    alert('Error ', err.statusText);
                                }
                            });
                    }
                });
            </script>
        }

    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách tour", "ListTour")
</div>