@model IEnumerable<LapTrinhWebDatTourDuLich.Models.Table_Tour>
@{
    ViewBag.Title = "ListTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách tour</h2>

@*Tìm kiếm theo tên tour*@
@using (Html.BeginForm())
{
    <p></p>
    <div class="form-group form-inline">
        <input placeholder="Tìm kiếm tour" type="text" name="TimKiemTour" class="form-control form-inline" />
        <input type="submit" value="Tìm kiếm" class="form-control" />
    </div>

}

<p>
    @Html.ActionLink("Thêm tour mới", "Create")
</p>

<table class="table">
    <tr>
        <th> Mã vận chuyển </th>
        <th> Tên tour </th>
        <th> Nơi khởi hành </th>
        <th> Ngày khởi hành </th>
        <th> Thời gian </th>
        <th> Giá tour </th>
        <th> Hình </th>
        <th> Tour này có gì hay </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaVanChuyen)</td>
            <td>@Html.DisplayFor(modelItem => item.TenTour)</td>
            <td>@Html.DisplayFor(modelItem => item.NoiKhoiHanh)</td>
            <td>@String.Format("{0: dd/MM/yyyy}", item.NgayKhoiHanh)</td>
            <td>@Html.DisplayFor(modelItem => item.ThoiGian)</td>
            @*  <td>@Html.DisplayFor(modelItem => item.GiaTour)</td> *@
            <td>@String.Format("{0:0,0}", item.GiaTour) VNĐ </td>

            <td><img src="@item.Hinh" alt="hinh thumbnail" /></td>
            <td>@Html.DisplayFor(modelItem => item.TourNayCoGiHay)</td>

            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTour }) |
                @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaTour }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaTour })
            </td>
        </tr>
    }
</table>