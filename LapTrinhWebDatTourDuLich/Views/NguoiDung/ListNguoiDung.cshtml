@model IEnumerable<LapTrinhWebDatTourDuLich.Models.Table_KhachHang>
@{
    ViewBag.Title = "ListNguoiDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách khách hàng</h2>

@*Tìm kiếm theo tên khách hàng*@
@using (Html.BeginForm())
{
    <p></p>
    <div class="form-group form-inline">
        <input placeholder="Tìm kiếm tên khách hàng" type="text" name="TimKiemKhachHang" class="form-control form-inline" />
        <input type="submit" value="Tìm kiếm" class="form-control" />
    </div>

}

<table border="1px">
    <tr>
        <th>Mã KH</th>

        <th>Tài khoản đăng nhập</th>
        <th>Họ tên KH</th>
        <th>Ngày sinh</th>
        <th>Email</th>
        <th>Địa chỉ</th>
        <th>Số điện thoại</th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaKH</td>

            <td>@item.TaiKhoanDangNhap</td>
            <td>@item.HoTenKH</td>
            <td>@String.Format("{0:dd/MM/yyyy}", item.NgaySinh)</td>
            <td>@item.Email</td>
            <td>@item.DiaChi</td>
            <td>@item.SoDienThoai</td>

            @*    <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaKH }) |
                    @Html.ActionLink("Detail", "Detail", new { id = item.MaKH }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaKH })
                </td> *@

            <td>

                @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaKH })

            </td>

        </tr>
    }
</table>

<div>
    @Html.ActionLink("Trở về trang chủ", "Index", "Home")
</div>
